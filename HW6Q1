package CS6150;
//Java ArrayList of Arrays

import java.util.*;
import java.util.Random;


public class understandingRelaxAndRound
{
	

	public static void main (String args[])
	  {

	   int n = 500; /*  n people, which is n sets */
	   ArrayList<Integer> m  = new ArrayList<Integer>(500); /*  m skills that wish to cover */
	   
	   // range of m is from 1 to 500, include 500, which is totally 500 skills
	   for( int a = 0; a < 500; a ++){
	       m.add(a+1);
	   }
	   
	   int d = 25; /*  d be the size of each skill set */
	   
	   ArrayList<Integer> copyM = new ArrayList<Integer>();
	   
	   int []person = new int[d];
	   
	   for(int i = 0; i < n; i++) {
	       
	       copyM.addAll(m);
	       for (int j = 0; j < d; j ++) {
	         int rnd = new Random().nextInt(copyM.size());
	         person[j] = copyM.get(rnd);
	         //avoid duplicate skills in one person, remove used index
	         copyM.remove(rnd);
	       }
	       System.out.println(Arrays.toString(person));
	       
	       copyM.removeAll(copyM);
	   
	   }
	  }
	
}
